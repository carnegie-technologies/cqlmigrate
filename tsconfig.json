{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "lib": ["es7", "dom"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "build",
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
